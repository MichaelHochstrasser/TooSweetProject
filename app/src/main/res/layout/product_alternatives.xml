<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtProductName2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="Produkt Name"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <ImageView
        android:id="@+id/imgProduct2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtProductName2"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="20dp"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/txtSug100g"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imgProduct2"
        android:layout_marginStart="54dp"
        android:layout_marginTop="22dp"
        android:layout_toEndOf="@+id/imgProduct2"
        android:text="Sugar/100g" />

    <TextView
        android:id="@+id/txtSugtot2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/txtSug100g"
        android:layout_marginStart="41dp"
        android:layout_toEndOf="@+id/txtSug100g"
        android:text="total Sugar [g]" />

    <TextView
        android:id="@+id/txtAlternativeName2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imgProduct2"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:text="Alternative Product"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <ListView
        android:id="@+id/listAlternatives"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/txtTab2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp" />

    <TextView
        android:id="@+id/txtTab2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtAlternativeName2"
        android:layout_marginTop="10dp"
        android:text="Amount Product  SugarReduction[%]     Sugar[g]    ChartSugar"
        android:textAppearance="@style/TextAppearance.AppCompat" />
</RelativeLayout>