<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtAlternativeName2"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignEnd="@+id/txtAltSugReduction2"
        android:layout_alignParentTop="true"
        android:layout_marginTop="102dp"
        android:text="Alternative Name" />

    <ImageView
        android:id="@+id/imgAlternative2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="80dp"
        android:layout_toStartOf="@+id/txtAlternativeName2"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/txtAltSug100g2"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_below="@+id/imgAlternative2"
        android:layout_marginEnd="18dp"
        android:layout_marginTop="97dp"
        android:layout_toStartOf="@+id/txtAlternativeName2"
        android:text="Sugar 100g" />

    <TextView
        android:id="@+id/txtSugtotAlt2"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/txtAltSug100g2"
        android:layout_alignBottom="@+id/txtAltSug100g2"
        android:layout_centerHorizontal="true"
        android:text="total Sugar" />

    <TextView
        android:id="@+id/txtAltSugReduction2"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/txtSugtotAlt2"
        android:layout_alignBottom="@+id/txtSugtotAlt2"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="24dp"
        android:text="Sugar Reduction %" />
</RelativeLayout>