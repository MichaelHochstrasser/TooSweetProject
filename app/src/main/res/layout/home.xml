<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.michaelh.toosweetproject.MainActivity">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <EditText
        android:id="@+id/txteditCSVup"
        android:layout_width="800dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imgButChart"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="20dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Please enter your CVS from your Migros Cumulus account"
        android:textAppearance="@style/TextAppearance.AppCompat.Small" />

    <ImageView
        android:id="@+id/imgSugar1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/imgLogo"
        android:layout_marginTop="10dp"
        android:layout_toStartOf="@+id/imgButChart"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/sugar1" />

    <ImageView
        android:id="@+id/imgpfeil"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignTop="@+id/imgSugar1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        app:srcCompat="@drawable/pfeil" />

    <ImageView
        android:id="@+id/imgSugar2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/imgSugar1"
        android:layout_toEndOf="@+id/imgButChart"
        app:srcCompat="@drawable/sugar2" />

    <ImageButton
        android:id="@+id/imgButChart"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="65dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/verlaufschart" />

    <ImageButton
        android:id="@+id/imgButReceipt"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/imgButChart"
        android:layout_toStartOf="@+id/imgButChart"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/quittungsbild" />

    <ImageButton
        android:id="@+id/imgButProfil"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignStart="@+id/imgSugar2"
        android:layout_alignTop="@+id/imgButChart"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/profilbild" />

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="240dp"
        android:layout_height="180dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        app:srcCompat="@drawable/logo5" />

</RelativeLayout>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/navigation" />

</android.support.constraint.ConstraintLayout>
